{
    "name": "schnittstabil/composer-extra",
    "type": "library",
    "description": "Get namespaced configuration from composer.json `extra`",
    "license": "MIT",
    "keywords": ["composer.json", "composer", "extra", "configuration"],
    "authors": [
        {
            "name": "Michael Mayer",
            "email": "michael@schnittstabil.de"
        }
    ],
    "autoload": {
        "psr-4": { "Schnittstabil\\ComposerExtra\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "Schnittstabil\\ComposerExtra\\": "tests" }
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/schnittstabil/pdepend.git"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "schnittstabil/get": "^2.0",
        "schnittstabil/config_merge": "^2.0"
    },
    "require-dev": {
        "codeclimate/php-test-reporter": "^0.3.0",
        "phpmd/phpmd": "^2.3",
        "pdepend/pdepend": "dev-fix-namespaced-consts-and-functions as 2.0",
        "satooshi/php-coveralls": "^1.0",
        "squizlabs/php_codesniffer": "^2.5",
        "phpunit/phpunit": "^5.3",
        "friendsofphp/php-cs-fixer": "^1.0",
        "phpmetrics/phpmetrics": "^1.10"
    },
    "extra": {
        "schnittstabil/composer-extra": {
            "unicorns": 42,
            "composerJson": true
        },
        "disable presets": {
            "presets": false,
            "unicorns": 42,
            "composerJson": true
        },
        "empty presets": {
            "unicorns": 42,
            "composerJson": true
        },
        "multiple presets": {
            "unicorns": 42,
            "composerJson": true
        },
        "override presets": {
            "presets": [
                "Schnittstabil\\ComposerExtra\\Presets\\SecondPreset::get"
            ],
            "unicorns": 42,
            "composerJson": true
        }
    },
    "scripts": {
        "clean": "rm -rf build/",
        "doc": [
            "sugared-sami",
            "phpmetrics --report-html build/phpmetrics/metrics.html src/"
        ],
        "lint": [
            "phpcs -s --standard=PSR1,PSR2 src/ tests/",
            "phpmd src text cleancode,codesize,controversial,design,naming,unusedcode",
            "php-cs-fixer fix --dry-run --diff src",
            "php-cs-fixer fix --dry-run --diff tests"
        ],
        "test": [
            "phpunit",
            "composer lint"
        ]
    }
}
